extends ../../layouts/default.pug
block head 
  link(rel="stylesheet", href="/admin/css/roles/permissions.css") 
block sidebar
block content
  .content-container(data=roles)
    //  Permissions Content 
    .permissions-content
      .permissions-header
        h1 Phân quyền 
        button.update-btn Cập nhật
      table(class="table-hover table",table-permissions)
        thead
          tr
            th Tính năng
            each item in roles  
              th(style="text-align:center") #{item.title}
        tbody
          tr(data-name="id",class="d-none") 
            td 
            each item in roles 
              td(class="text-center")
                input(type="text",value=item._id)
          tr.permission-header
            td(colspan=count+1) Danh mục sản phẩm
          tr(data-name="category_view")
            td Xem
            each item in roles
              td
                input(type="checkbox")
          tr(data-name="category_create") 
            td Thêm mới
            each item in roles
              td
                input(type="checkbox")
          tr(data-name="category_edit")
            td Chỉnh sửa
            each item in roles
              td
                input(type="checkbox")
          tr(data-name="category_delete")
            td Xóa
            each item in roles
              td
                input(type="checkbox")
          tr.permission-header
            td(colspan=count+1) Danh sách sản phẩm
          tr(data-name="product_view")
            td Xem
            each item in roles
              td
                input(type="checkbox")
          tr(data-name="product_create") 
            td Thêm mới
            each item in roles
              td
                input(type="checkbox")
          tr(data-name="product_edit")
            td Chỉnh sửa
            each item in roles
              td
                input(type="checkbox")
          tr(data-name="product_delete")
            td Xóa
            each item in roles
              td
                input(type="checkbox")
  script(type="module", src="/admin/js/roles/Permissions.js") 
