mixin Select-Category(items, level=1,parent_id="")
  each item in items
    - const prefix=Array(level + 1).join('--&nbsp;&nbsp;')
    option(value=item._id selected=(item.id==parent_id ? true : false))!= prefix + item.category_name 
      if item.children && item.children.length>0
        +Select-Category(item.children, level+1,parent_id)